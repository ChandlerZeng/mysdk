<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zcq.sdk.test.activity.OkHttpActivity">

        <TextView
            android:id="@+id/tv_okhttp_tomcat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomcat"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="38dp" />

        <TextView
            android:id="@+id/tv_okhttp_baidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baidu"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_okhttp_tomcat"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_okhttp_tomcat"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/tv_okhttp_tomcat" />

        <TextView
            android:id="@+id/tv_okhttp_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_okhttp_baidu"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_okhttp_baidu"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/tv_okhttp_baidu" />

        <TextView
            android:id="@+id/tv_okhttp_netease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NetEase"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_okhttp_qq"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/tv_okhttp_qq"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_okhttp_qq" />

        <ImageView
            android:id="@+id/iv_okhttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_okhttp_netease"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/tv_okhttp_netease"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_okhttp_netease" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>

